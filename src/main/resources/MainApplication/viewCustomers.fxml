      </TableView>
      <HBox layoutX="611.0" layoutY="426.0" prefHeight="40.0" prefWidth="503.0" spacing="25.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onAddBtnClick" prefHeight="25.0" prefWidth="90.0" text="Add" />
