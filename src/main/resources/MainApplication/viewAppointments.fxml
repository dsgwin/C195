<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="471.0" prefWidth="1128.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.viewAppointmentsController">
   <children>
      <Label layoutX="14.0" layoutY="6.0" text="Appointments">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="tblView" layoutX="28.0" layoutY="49.0" prefHeight="361.0" prefWidth="1073.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="47.0" text="ID" />
            <TableColumn fx:id="titleCol" prefWidth="54.0" text="Title" />
            <TableColumn fx:id="descriptionCol" prefWidth="236.0" text="Description" />
            <TableColumn fx:id="locationCol" minWidth="0.0" prefWidth="63.0" text="Location" />
            <TableColumn fx:id="contactCol" prefWidth="67.0" text="Contact" />
            <TableColumn fx:id="typeCol" minWidth="6.0" prefWidth="14.0" text="Type" />
            <TableColumn fx:id="startCol" prefWidth="74.0" text="Start Date/Time" />
            <TableColumn fx:id="endCol" minWidth="5.0" prefWidth="23.0" text="End Date/Time" />
            <TableColumn fx:id="customerIdCol" minWidth="5.0" prefWidth="668.0" text="Customer ID" />
            <TableColumn fx:id="userIdCol" minWidth="5.0" prefWidth="174.0" text="User ID" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox layoutX="761.0" layoutY="426.0" prefHeight="40.0" prefWidth="353.0" spacing="25.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onAddBtnClick" text="Add" />
            <Button mnemonicParsing="false" onAction="#onUpdateBtnClick" text="Update" />
            <Button mnemonicParsing="false" onAction="#onDeleteBtnClick" text="Delete" />
            <Button fx:id="mainMenuBtn" mnemonicParsing="false" onAction="#onMainMenuBtnClick" text="Return To Main Menu" />
         </children>
      </HBox>
      <Label fx:id="errorPaneTxt" layoutX="28.0" layoutY="426.0" prefHeight="35.0" prefWidth="718.0" textFill="#ff4c4c">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="818.0" layoutY="7.0" prefHeight="35.0" prefWidth="296.0" spacing="25.0">
         <children>
            <RadioButton fx:id="weeklyRBtn" mnemonicParsing="false" onAction="#weeklyRBtnClick" selected="true" text="Weekly">
               <toggleGroup>
                  <ToggleGroup fx:id="weekMonth" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="monthlyRBtn" mnemonicParsing="false" onAction="#monthlyRBtnClick" text="Monthly" toggleGroup="$weekMonth" />
         </children>
      </HBox>
   </children>
</AnchorPane>
